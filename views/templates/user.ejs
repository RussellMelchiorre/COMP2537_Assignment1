<tr>
  <td><%= u.name %></td>
  <td><%= u.email %></td>
  <td><%= u.user_type %></td>
  <td>
    <% if (u.user_type === "admin") { %>
      <form action="/demote/<%= u._id %>" method="GET" style="display:inline;">
        <button type="submit" class="btn btn-secondary btn-sm">Demote</button>
      </form>
    <% } else { %>
      <form action="/promote/<%= u._id %>" method="GET" style="display:inline;">
        <button type="submit" class="btn btn-primary btn-sm">Promote</button>
      </form>
    <% } %>
  </td>
</tr>
